{
  "bsonType": "object",
  "required": ["name"],
  "permission": {
    "read": true,
    "create": false,
    "update": false,
    "delete": false
  },
  "properties": {
    "_id": {
      "description": "存储文档 ID（文章 ID），系统自动生成"
    },
    "name": {
      "bsonType": "string",
      "description": "类别名称",
      "title": "类别名称",
      "trim": "both"
    },
    "user_id": {
      "bsonType": "string",
      "description": "文章作者ID， 参考`uni-id-users` 表",
      "foreignKey": "uni-id-users._id",
      "defaultValue": {
        "$env": "uid"
      }
    },
    "sort": {
      "bsonType": "int",
      "description": "类别排序，越大越靠后",
      "title": "排序",
      "defaultValue": 0
    },
    "is_on_sale": {
      "bsonType": "bool",
      "description": "是否上架销售",
      "title": "是否上架"
    }
  },
  "version": "0.0.1"
}