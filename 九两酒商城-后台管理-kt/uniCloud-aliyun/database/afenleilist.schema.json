// 商城搜索列表
{
  "bsonType": "object",
  "required": ["name"],
  "permission": {
    "read": true,
    "create": true,
    "update": "auth.uid != null",
    "delete": "auth.uid != null"
  },
  "properties": {
    "_id": {
      "description": "存储文档 ID（文章 ID），系统自动生成"
    },
    "name": {
      "bsonType": "string",
      "description": "2极分类名称",
      "trim": "both"
    },

    "category_id": {
      "bsonType": "string",
      "title": "分类",
      "description": "分类 id，参考`uni-news-categories`表",
      "foreignKey": "afenlei._id",
      "enum": {
        "collection": "afenlei",
        "orderBy": "sort asc",
        "field": "title as text, _id as value"
      }
    },
    "iconss": {
      "bsonType": "string",
      "description": "iconfont图标地址",
    },
    "sort": {
      "bsonType": "int",
      "title": "排序",
      "description": "类别排序"
    },

    "create_date": {
      "bsonType": "timestamp",
      "description": "创建时间",
      "defaultValue": {
        "$env": "now"
      }
    },

  },
  "version": "0.0.1"
}