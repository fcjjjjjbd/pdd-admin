{
  "bsonType": "object",
  "required": [
    "content"
  ],
  "permission": {
    "read": true,
    "create": true,
    "update": "doc.user_id==auth.uid",
    "delete": "doc.user_id==auth.uid"
  },
  "properties": {
    "_id": {
      "description": "存储文档 ID（用户 ID），系统自动生成"
    },
    "name": {
      "bsonType": "string",
      "description": "截取的标题"
    },
    "content": {
      "bsonType": "string",
      "trim": "both"
    },
    "user_id": {
      "bsonType": "string",
      "description": "作者ID， 参考`uni-id-users` 表",
      "foreignKey": "uni-id-users._id",
      "defaultValue": {
        "$env": "uid"
      }
    },
    "imageValue": {
      "maxLength": 9,
      "bsonType": "array",
      "title": "图片列表"
    },
    "temparr": {
      "maxLength": 9,
      "bsonType": "array",
      "arrayType": "file",
      "fileMediaType": "image",
      "title": "临时图片"
    },
    "category_id": {
      "bsonType": "string",
      "description": "分类 id",
      "foreignKey": "JLJ-mall-category._id"
    },

    "category_name": {
      "bsonType": "string",
      "description": "分类名称"
    },
    "goods_thumb": {
      "bsonType": "string",
      "description": "商品详细描述",
      "trim": "both"
    },
    "like_count": {
      "bsonType": "int",
      "description": "收藏数",
      "defaultValue": 0
    },
    "view_count": {
      "bsonType": "int",
      "description": "阅读量",
      "defaultValue": 0
    },
    "publish_date": {
      "bsonType": "timestamp",
      "title": "发表时间",
      "description": "发表时间",
      "defaultValue": {
        "$env": "now"
      }
    }
  }
}