// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
  "bsonType": "object",
  "required": ["total_fee"],
  "permission": {
    "read": true,
    "create": true,
    "update": "doc.user_id==auth.uid",
    "delete": "doc.user_id==auth.uid"
  },
  "properties": {
    "_id": {
      "description": "ID，系统自动生成"
    },

    "user_id": {
      "bsonType": "string",
      "description": "作者ID， 参考`uni-id-users` 表",
      "foreignKey": "uni-id-users._id",
      "defaultValue": {
        "$env": "uid"
      }
    },
    "goods_thumb": {
      "bsonType": "string",
      "description": "用于在列表显示封面图图",
      "title": "封面地址",
      "pattern": "^(http:\/\/|https:\/\/|\/|.\/|@\/)\\S",
      "trim": "both"
    },
    "order_no": {
      "bsonType": "string",
      "title": "订单号",
      "trim": "both"
    },
    "status": {
      "bsonType": "int",
      "title": " 0：未支付 1：已支付 2：已部分退款 3：已全额退款",
      "defaultValue": 0
    },
    "total_fee": {
      "title": " 价格"
    },
    "createTime": {
      "bsonType": "timestamp",
      "title": "发表时间",
      "description": "发表时间",
      "defaultValue": {
        "$env": "now"
      }
    },
    "phone": {
      "bsonType": "string",
      "title": " 电话"
    },
    "content": {
      "bsonType": "string",
      "title": "广告内容",
      "trim": "both"
    },
    "category_id": {
      "bsonType": "string",
      "title": "分类id"

    }
  }
}