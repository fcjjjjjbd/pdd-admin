// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
  "bsonType": "object",
  "required": ["total_fee"],
  "permission": {
    "read": true,
    "create": true,
    "update": "doc.user_id==auth.uid",
    "delete": "doc.user_id==auth.uid"
  },
  "properties": {
    "_id": {
      "description": "ID，系统自动生成"
    },

    "user_id": {
      "bsonType": "string",
      "description": "作者ID， 参考`uni-id-users` 表",
      "foreignKey": "uni-id-users._id",
      "defaultValue": {
        "$env": "uid"
      }
    },
    "openid": {
      "title": "openid",
      "bsonType": "string",
      "description": "发起支付的用户openid",
      "trim": "both"
    },
    "description": {
      "title": "支付描述",
      "bsonType": "string",
      "description": "支付描述，如：uniCloud个人版包月套餐",
      "trim": "both"
    },
    "like_count": {
      "bsonType": "int",
      "description": "喜欢数、点赞数",
      "defaultValue": 0
    },
    "comment_count": {
      "bsonType": "int",
      "description": "评论数量",
      "defaultValue": 0
    },
    "imageValue": {
      "bsonType": "array",
      "description": "用于在列表显示封面图图",
      "title": "封面地址",
      "trim": "both"
    },
    "temparr": {
      "bsonType": "array",
      "description": "用于在临时图",
      "title": "封面地址",
      "trim": "both"
    },
    "order_no": {
      "title": "支付插件订单号",
      "bsonType": "string",
      "description": "支付插件订单号（需控制唯一，不传则由插件自动生成）",
      "trim": "both"
    },
    "phone": {
      "bsonType": "int",
      "description": "手机号码",
          },
    "order_status": {
      "title": "订单状态",
      "bsonType": "int",
      "enum": [{
          "text": "已关闭",
          "value": -1
        },
        {
          "text": "待付款",
          "value": 0
        },
        {
          "text": "待发货",
          "value": 1
        },
        {
          "text": "待取货",
          "value": 2
        },
        {
          "text": "待收货",
          "value": 3
        },
        {
          "text": "退款",
          "value": 4
        },
        {
          "text": "完成",
          "value": 5
        }
      ],
      "description": "订单状态 -1 已关闭 0：待付款 1：待发货 2：待取货 3：待收货 4：退款 5：完成",
      "defaultValue": 0
    },
    "total_fee": {
      "title": " 价格"
    },
    "createTime": {
      "bsonType": "timestamp",
      "title": "发表时间",
      "description": "发表时间",
      "defaultValue": {
        "$env": "now"
      }
    },

    "content": {
      "bsonType": "string",
      "title": "广告内容",
      "trim": "both"
    },
    "wx_count": {
      "bsonType": "string",
      "title": "微信号",
      "trim": "both"
    },
    "category_id": {
      "bsonType": "string",
      "title": "分类id",
      "foreignKey": "JLJ-mall-goods._id"
    }
  }
}